<%- include("./partials/header.ejs") %>

<div class="wrapper">
    <div class="content rounded">
        <form id="signupForm" method="post" action="/user/signup" class="d-flex flex-column">
            <img class="mb-4" src="/assets/ssi1.png" alt="user" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
        
            <div class="form-floating">
                <input type="text" class="form-control" id="floatingName" placeholder="Name" name="name" required>
                <label for="floatingName">Name</label>
            </div>
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email" required>
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required>
                <label for="floatingPassword">Password</label>
            </div>
        
            <button class="btn btn-primary w-80 py-2" type="submit">Sign Up</button>
        </form>
        <hr class="featurette-divider">
        <div>
            <a href="/user" class="btn btn-primary w-100 py-2">Already have an account? Log in!</a>
        </div>
    </div>
</div>

<%- include("./partials/footer.ejs") %>